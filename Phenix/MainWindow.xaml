                                <Grid.RowDefinitions>
                                    <RowDefinition Height="129" />
                                    <RowDefinition Height="267" />
                                    <RowDefinition Height="141" />
                                </Grid.RowDefinitions>
                                <GroupBox Header="SQLite测试" Height="Auto" HorizontalAlignment="Stretch" Margin="0" Name="groupBox5" VerticalAlignment="Stretch" Width="Auto">
